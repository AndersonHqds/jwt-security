<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1.0.0-user_account" author="Jakub Leško">
        <createTable tableName="user_account">
            <column name="id" type="SERIAL">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="username" type="VARCHAR(180)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password_hash" type="VARCHAR(240)"/>
        </createTable>

        <loadData tableName="user_account" separator=";" file="classpath:database/data/user_account.csv"/>
    </changeSet>

    <changeSet id="1.0.0-refresh_token" author="Jakub Leško">
        <createTable tableName="refresh_token">
            <column name="id" type="SERIAL">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="token" type="VARCHAR(180)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="issued_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="expiration_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="user_account_id" type="SERIAL">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="refresh_token"
                                 baseColumnNames="user_account_id"
                                 constraintName="fk_user_account_token"
                                 referencedTableName="user_account"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
